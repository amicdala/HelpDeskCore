@model HelpDesk.Models.ViewModels.UserProfileViewModel


@{
    ViewBag.Title = "Kullanıcıyı Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section top
    {
    <link rel="stylesheet" href="~/assets/plugins/select2/select2.min.css" />
    <link rel="stylesheet" href="~/assets/plugins/select2/select2-bootstrap.css" />
}

<div id="container" class="effect mainnav-sm navbar-fixed mainnav-fixed">
    <div class="boxed">
        <!--CONTENT CONTAINER-->
        <!--===================================================-->
        <div class="pageheader hidden-xs">
            <h3><i class="fa fa-home"></i>Yeni Arıza Bildirimi</h3>
        </div>
        <!--Page content-->
        <!--===================================================-->
        <div id="page-content" class="col-lg-6 col-lg-offset-3">
            <br /><br /><br /><br />
            <h3>@TempData["Message"]</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <form asp-action="EditUser" class="fieldset" enctype="multipart/form-data">
                <input asp-for="Id" type="hidden" />
                <input asp-for="UserName" type="hidden" />
                <h4 class="col-md-3 control-label">Profil Bilgileri</h4>
                <div class="form-group row">
                    <div class="col-sm-9 control-label">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="col-sm-9 control-label">
                        <label asp-for="Surname"></label>
                        <input asp-for="Surname" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-9 control-label">
                        <label asp-for="Email"></label>
                        <input asp-for="Email"class = "form-control col-sm-9" type = "email" />
                    </div>
                    <div class="col-sm-9 control-label">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control col-sm-9" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-9 control-label">
                        <label asp-for="PostedFile"></label>
                        <input asp-for="PostedFile" class = "form-control col-sm-9" type = "file" multiple = false />
                    </div>
                </div>
                <div class="row narrow-gutter">
                    <div class="col-xs-6">
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                    </div>
                </div><br />
            </form>

            <form asp-action="EditUserRoles">

                <div class="form-group row">
                    <div class="col-sm-9 control-label">
                       <input asp-for="Id"/>
                       <div class="col-md-12">
                           @Html.DropDownList("Roles", (List<SelectListItem>)ViewBag.RoleList, new { @class = "btn dropdown-toggle btn-default btn-block" })
                       </div>
                    </div>
                    <div class="col-sm-9 control-label">
                        <br />
                        <input type="submit" value="Rol Güncelle" class="btn btn-primary" />
                    </div>
                </div>

            </form>

           
        </div>
        <!--===================================================-->
        <!--END CONTENT CONTAINER-->

    </div>
    <!-- SCROLL TOP BUTTON -->
    <!--===================================================-->
    <button id="scroll-top" class="btn"><i class="fa fa-chevron-up"></i></button>
    <!--===================================================-->

    @section bottom
        {
        <script src="~/assets/plugins/select2/select2.full.min.js"></script>
        <script src="~/assets/plugins/bootstrap-notify/bootstrap-notify.min.js"></script>

        <script>
            $(function () {
                App.initHelpers(['select2']);
            });
        </script>
    }
